@model Auth.Model.CustomAccountViewModel
@{
    Layout = null;
    ViewBag.Title = "Log in";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>VAS-CRP</title>
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">

    @Styles.Render("~/bundles/Content/ACustom/bootstrap/css")
    @*@Styles.Render("~/bundles/Content/ACustom/plugins/font-awesome/css")*@
    <link href="~/Content/ACustom/plugins/font-awesome/css/font-awesome.min.css" rel="stylesheet" />
    @Styles.Render("~/bundles/Content/ACustom/plugins/ionicons/css")
    @Styles.Render("~/bundles/Content/ACustom/dist/css")
    @Styles.Render("~/bundles/Content/ACustom/plugins/icheck/css/sqare/blue")


